  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const vid = document.querySelector('video');
      vid.addEventListener('canplay', () => {
        if (vid.requestFullscreen) vid.requestFullscreen().catch(() => {});
        vid.play();
      });
    });
  </script>
